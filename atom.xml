    <title>铜业超级周期🚀</title>
    <link href="http://example.com/2025/11/04/%E9%93%9C%E4%B8%9A%E7%AC%94%E8%AE%B0/"/>
    <id>http://example.com/2025/11/04/%E9%93%9C%E4%B8%9A%E7%AC%94%E8%AE%B0/</id>
    <published>2025-11-04T10:40:11.000Z</published>
